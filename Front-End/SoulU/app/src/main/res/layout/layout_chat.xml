<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/triangle_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-16dp"
            android:contentDescription="@string/image_logo"
            android:src="@drawable/left_chat_triangle"/>

        <TextView
            android:id="@+id/left_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:padding="18dp"
            android:textColor="@color/green_valley"
            android:textSize="16sp"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/find_out_how"
            android:background="@drawable/rounderd_background_10dp_corner"/>

        <TextView
            android:id="@+id/left_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="-70dp"
            android:layout_gravity="bottom"
            android:textColor="@color/green_valley"
            android:paddingBottom="5dp"
            android:text="@string/time_in_card_history"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/left_chat_layout"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/right_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="280dp"
            android:padding="18dp"
            android:layout_marginStart="65dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/yes_more_than"
            android:backgroundTint="@color/garlic_butter"
            android:background="@drawable/rounderd_background_10dp_corner"/>

        <TextView
            android:id="@+id/right_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:layout_marginStart="-60dp"
            android:layout_gravity="bottom"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:text="@string/time_in_card_history"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/triangle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="-12dp"
            android:contentDescription="@string/image_logo"
            android:src="@drawable/right_chat_triangle"/>
    </LinearLayout>


</RelativeLayout>