<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity"
    android:background="@color/forest_frolic">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:contentDescription="@string/image_logo"
        android:src="@drawable/logo_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="@string/title_sign_up"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo" />

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="63dp"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/inter_medium"
        android:hint="@string/title_email"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textColor="@color/green_valley"
        android:textColorHint="@color/green_valley"
        android:textColorHighlight="@color/homeopathic_lime"
        android:textColorLink="@color/green_valley"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_login"
        tools:ignore="SpeakableTextPresentCheck" />


    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="63dp"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/inter_medium"
        android:hint="@string/title_password"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="50dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textColor="@color/green_valley"
        android:textColorHint="@color/green_valley"
        android:textColorHighlight="@color/homeopathic_lime"
        android:textColorLink="@color/green_valley"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_edit_text"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/togglePasswordButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/title_password"
        android:src="@drawable/view_alt_light"
        app:layout_constraintBottom_toBottomOf="@+id/password_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/password_edit_text"
        app:layout_constraintTop_toTopOf="@+id/password_edit_text" />

    <EditText
        android:id="@+id/confirm_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="63dp"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/inter_medium"
        android:hint="@string/confirm_password"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="50dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:textColor="@color/green_valley"
        android:textColorHint="@color/green_valley"
        android:textColorHighlight="@color/homeopathic_lime"
        android:textColorLink="@color/green_valley"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_edit_text"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/toggleConfirmPasswordButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/title_password"
        android:src="@drawable/view_alt_light"
        app:layout_constraintBottom_toBottomOf="@+id/confirm_password_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/confirm_password_edit_text"
        app:layout_constraintTop_toTopOf="@+id/confirm_password_edit_text" />


    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="157dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white"
        android:foregroundTint="@color/green_valley"
        android:text="@string/title_sign_up"
        android:textColor="@color/green_valley"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_edit_text" />

    <TextView
        android:id="@+id/text_or_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:text="@string/or_use"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_up"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider1"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        app:dividerThickness="2dp"
        android:layout_marginEnd="17dp"
        style="@style/Widget.Material3.MaterialDivider"
        app:dividerColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/text_or_use"
        app:layout_constraintTop_toTopOf="@+id/text_or_use"
        app:layout_constraintBottom_toBottomOf="@+id/text_or_use"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider2"
        style="@style/Widget.Material3.MaterialDivider"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        app:dividerThickness="2dp"
        app:dividerColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/text_or_use"
        app:layout_constraintStart_toEndOf="@+id/text_or_use"
        app:layout_constraintTop_toTopOf="@+id/text_or_use" />

    <ImageButton
        android:id="@+id/sign_in_google"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="135dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="14dp"
        android:src="@drawable/google"
        android:contentDescription="@string/image_logo"
        android:background="@drawable/rounded_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_or_use" />

    <ImageButton
        android:id="@+id/sign_in_facebook"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="135dp"
        android:src="@drawable/facebook"
        android:contentDescription="@string/image_logo"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="@drawable/rounded_background"
        app:layout_constraintBottom_toBottomOf="@+id/sign_in_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sign_in_google"/>

    <TextView
        android:id="@+id/tv_dont_have_accout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="77dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center_horizontal"
        android:text="@string/dont_have_account"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_facebook"
        app:layout_constraintStart_toStartOf="@+id/divider1"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_google" />

    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_extrabold"
        android:text="@string/sign_in"
        android:textColor="@color/garlic_butter"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dont_have_accout"
        app:layout_constraintEnd_toEndOf="@+id/divider2"
        app:layout_constraintStart_toEndOf="@+id/tv_dont_have_accout"
        app:layout_constraintTop_toTopOf="@+id/tv_dont_have_accout" />
</androidx.constraintlayout.widget.ConstraintLayout>